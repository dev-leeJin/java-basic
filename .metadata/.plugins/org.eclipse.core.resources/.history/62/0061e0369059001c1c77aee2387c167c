package constructor;

public class Webtoon {
	public String name;
	public int series;
	public String painter;
	public boolean complete;
	
	
	public Webtoon(String n, String p) {
		name = n;
		series = 1;
		painter = p;
		complete = false;

		
	}
	public void getInfo() {
		System.out.println("제목 : "+name+", 회차 : "+series);
	}
	public void uploadWebtoon() {
		series += 1;
		if(complete=true) {
			System.out.println("시리즈가 종료되었습니다.");
		}
	}
	public void completeWebtoon() {
		if(series>=3) {
		complete = true;
	    
	}}
}
